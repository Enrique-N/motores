<div class="container my-3 d-flex justify-content-center ">
    <form id="form" action="/productos" method="post">
        <label>Producto:</label>
        <input type="text" name="tittle" id="tittle">
        <label>Precio:</label>
        <input type="number" name="price" id="price">
        <label>Imagen:</label>
        <input type="text" name="thumb" id="thumb">
        <button type="submit">Agregar</button>
    </form>
</div>

<div class="mx-5">
    {{#if data}}
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Producto</th>
                <th scope="col">Precio</th>
                <th scope="col">imagen</th>
            </tr>
        </thead>
        {{#each data}}
        <tbody>
            <tr>
                <th scope="row">{{this.id}}</th>
                <td>{{this.tittle}}</td>
                <td>${{this.price}}</td>
                <td><img src={{this.thumb}} alt="" width="30px" height="30px"></td>
            </tr>
        </tbody>
        {{/each}}
    </table>
    {{else}}
    <h1 class="text-center">No hay productos</h1>
    {{/if}}
</div>